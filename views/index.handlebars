<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="word-text">Word</label>
            <input type="text" id="word-text" class="form-control" aria-describedby="word-text" placeholder="Enter a Word">
          </div>
          <div class="form-group">
            <label for="word-definition">Word Definition</label>
            <textarea class="form-control" id="word-definition" aria-describedby="word-definition" placeholder="Enter Word Definition"></textarea>
          </div>
          <div class="form-group">
            <label for="word-etymology">Word Etymology</label>
            <textarea class="form-control" id="word-etymology" aria-describedby="word-etymology" placeholder="Enter Word Etymology"></textarea>
          </div>
          <div class="form-group">
            <label for="word-pronunciation">Word Pronunciation</label>
            <textarea class="form-control" id="word-pronunciation" aria-describedby="word-pronunciation" placeholder="Link to pronunciation"></textarea>
          </div>
          <div class="form-group">
            <label for="word-comment">User Comments</label>
            <textarea class="form-control" id="word-comment" aria-describedby="word-comment" placeholder="Enter any comments"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Words:</h3>
        <ul id="word-list" class="list-group">
          {{#each words}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="word/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
